{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "macos-base",
      "hidden": true,
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "VCTK_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "macos-debug",
      "inherits": "macos-base",
      "binaryDir": "${sourceDir}/build/macos-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-release",
      "inherits": "macos-base",
      "binaryDir": "${sourceDir}/build/macos-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Eigen3_SOURCE_DIR": "${sourceDir}/build/macos-debug/_deps/eigen3-src"
      }
    },
    {
      "name": "macos-sanitize",
      "inherits": "macos-base",
      "binaryDir": "${sourceDir}/build/macos-sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "-O1 -g -fno-omit-frame-pointer -fsanitize=address,undefined",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "-fsanitize=address,undefined",
        "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "-fsanitize=address,undefined",
        "Eigen3_SOURCE_DIR": "${sourceDir}/build/macos-debug/_deps/eigen3-src"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "VCTK_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "linux-base",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "inherits": "linux-base",
      "binaryDir": "${sourceDir}/build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Eigen3_SOURCE_DIR": "${sourceDir}/build/linux-debug/_deps/eigen3-src"
      }
    },
    {
      "name": "linux-sanitize",
      "inherits": "linux-base",
      "binaryDir": "${sourceDir}/build/linux-sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "-O1 -g -fno-omit-frame-pointer -fsanitize=address,undefined",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "-fsanitize=address,undefined",
        "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "-fsanitize=address,undefined",
        "Eigen3_SOURCE_DIR": "${sourceDir}/build/linux-debug/_deps/eigen3-src"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-macos-debug",
      "configurePreset": "macos-debug"
    },
    {
      "name": "build-macos-release",
      "configurePreset": "macos-release"
    },
    {
      "name": "build-macos-sanitize",
      "configurePreset": "macos-sanitize"
    },
    {
      "name": "build-linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "build-linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "build-linux-sanitize",
      "configurePreset": "linux-sanitize"
    }
  ],
  "testPresets": [
    {
      "name": "test-macos-debug",
      "configurePreset": "macos-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-macos-release",
      "configurePreset": "macos-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-macos-sanitize",
      "configurePreset": "macos-sanitize",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-linux-debug",
      "configurePreset": "linux-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-linux-release",
      "configurePreset": "linux-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-linux-sanitize",
      "configurePreset": "linux-sanitize",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
